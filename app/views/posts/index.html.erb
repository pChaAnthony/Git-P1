<div id="product_list">
<h1>Listing posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Detail</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
        <td class="list_description">
			<dl>
				<dt> <%= post.title %> </dt>
				<dd> <%= truncate(strip_tags(post.detail), :length => 80) %> </dd>
			</dl>
		</td>
       
		<td class="list_actions">
			<%= link_to 'Show', post %> <br/>
			<%= link_to 'Edit', edit_post_path(post) %> <br/>
			<%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
		</td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

